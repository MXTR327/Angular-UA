{
  "arrowParens": "avoid",
  "attributeGroups": [
    "$CODE_GUIDE"
  ],
  "braceStyle": "allman",
  "overrides": [
    {
      "files": "*.html",
      "options": {
        "parser": "angular"
      }
    }
  ],
  "plugins": [
    "prettier-plugin-tailwindcss",
    "prettier-plugin-brace-style",
    "prettier-plugin-organize-attributes",
    "prettier-plugin-merge"
  ],
  "printWidth": 80,
  "semi": true,
  "singleQuote": true,
  "tabWidth": 2,
  "trailingComma": "es5"
}
